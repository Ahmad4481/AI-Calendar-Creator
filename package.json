{
  "name": "ai-calendar-creator",
  "version": "1.0.0",
  "description": "AI-powered calendar creation and management application",
  "main": "src/frontend/pages/index.html",
  "scripts": {
    "start": "npx http-server src/frontend -p 3000 -o",
    "dev": "npx http-server src/frontend -p 3000 -o --cors",
    "build": "npm run build:css && npm run build:js",
    "build:css": "npx postcss src/frontend/assets/css/**/*.css -d dist/css",
    "build:js": "npx rollup -c",
    "test": "npx jest",
    "lint": "npx eslint src/frontend/assets/js/**/*.js",
    "format": "npx prettier --write src/frontend/assets/js/**/*.js",
    "serve": "npx http-server dist -p 8080 -o"
  },
  "keywords": [
    "calendar",
    "ai",
    "productivity",
    "scheduling",
    "time-management",
    "arabic",
    "rtl"
  ],
  "author": "AI Calendar Creator Team",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "autoprefixer": "^10.4.16",
    "cssnano": "^6.0.1",
    "eslint": "^8.52.0",
    "http-server": "^14.1.1",
    "jest": "^29.7.0",
    "postcss": "^8.4.31",
    "postcss-cli": "^10.1.0",
    "prettier": "^3.0.3",
    "rollup": "^4.3.0",
    "rollup-plugin-copy": "^3.5.0"
  },
  "dependencies": {
    "@fullcalendar/core": "^6.1.10",
    "@fullcalendar/daygrid": "^6.1.10",
    "@fullcalendar/interaction": "^6.1.10",
    "@fullcalendar/timegrid": "^6.1.10",
    "@fullcalendar/list": "^6.1.10",
    "choices.js": "^10.2.0",
    "flatpickr": "^4.6.13",
    "floating-ui": "^1.2.9",
    "pico.css": "^2.0.6"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/ai-calendar-creator.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/ai-calendar-creator/issues"
  },
  "homepage": "https://github.com/your-username/ai-calendar-creator#readme"
}
